/* Initialize IupMglPlot widget class */
foreign IupMglPlotOpen() void

/* Create an IupMglPlot widget instance */
foreign IupMglPlot() *Ihandle

/***********************************************/
/*           Additional API                    */

/* Linear Data Only */
foreign IupMglPlotBegin(ih *Ihandle, dim int) void
foreign IupMglPlotAdd1D(ih *Ihandle, name *ubyte, y double) void
foreign IupMglPlotAdd2D(ih *Ihandle, x double, y double) void
foreign IupMglPlotAdd3D(ih *Ihandle, x double, y double, z double) void
foreign IupMglPlotEnd(ih *Ihandle) int

/* Linear (dim=1,2,3), Planar (dim=1), Volumetric (dim=1) */
foreign IupMglPlotNewDataSet(ih *Ihandle, dim int) int

/* Linear Data Only */
foreign IupMglPlotInsert1D(ih *Ihandle, ds_index int, sample_index int, names **ubyte, y *double, count int) void
foreign IupMglPlotInsert2D(ih *Ihandle, ds_index int, sample_index int, x *double, y *double, count int) void
foreign IupMglPlotInsert3D(ih *Ihandle, ds_index int, sample_index int, x *double, y *double, z *double, count int) void

/* Linear Data Only */
foreign IupMglPlotSet1D(ih *Ihandle, ds_index int, names **ubyte, y *double, count int) void
