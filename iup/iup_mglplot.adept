foreign IupMglPlotSet3D(ih *Ihandle, ds_index int, x *double, y *double, z *double, count int) void
foreign IupMglPlotSetFormula(ih *Ihandle, ds_index int, formulaX *ubyte, formulaY *ubyte, formulaZ *ubyte, count int) void

/* Linear (dim=1), Planar (dim=1), Volumetric (dim=1) */
foreign IupMglPlotSetData(ih *Ihandle, ds_index int, data *double, count_x int, count_y int, count_z int) void
foreign IupMglPlotLoadData(ih *Ihandle, ds_index int, filename *ubyte, count_x int, count_y int, count_z int) void
foreign IupMglPlotSetFromFormula(ih *Ihandle, ds_index int, formula *ubyte, count_x int, count_y int, count_z int) void

/* Only inside callbacks */
foreign IupMglPlotTransform(ih *Ihandle, x double, y double, z double, ix *int, iy *int) void
foreign IupMglPlotTransformTo(ih *Ihandle, ix int, iy int, x *double, y *double, z *double) void

/* Only inside callbacks */
foreign IupMglPlotDrawMark(ih *Ihandle, x double, y double, z double) void
foreign IupMglPlotDrawLine(ih *Ihandle, x1 double, y1 double, z1 double, x2 double, y2 double, z2 double) void
foreign IupMglPlotDrawText(ih *Ihandle, text *ubyte, x double, y double, z double) void

foreign IupMglPlotPaintTo(ih *Ihandle, format *ubyte, w int, h int, dpi double, data ptr) void

